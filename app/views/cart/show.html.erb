<%if cart.present? %>
<table>
  <tr>
   <th>Product</th>
   <th></th>
   <th></th>
  </tr>
<% cart.each do |product|%>
<tr>
    <td><%= product.name %></td>
    <td><%= form_with url: cart_show_path,method: :post do %>
      <%= hidden_field_tag(:id,product.id)%>


      <%= button_tag 'Increase'%><%end%></td>
    <td>
</tr>
<%end%>
